{
   "title":"Research Parameters",
   "description":"The following fields define the researcher and the research name.",
   "fields":[
      {
         "name":"researcher_id",
         "label":"Researcher ID",
         "type":"text",
         "help": "Use valid email address. May be your github email.",
         "required":true
      },
      {
         "name":"description",
         "label":"Researcher",
         "type":"text",
         "help": "Your name or description.",
         "required":true
      },
      {
         "name":"research_id",
         "label":"Research ID",
         "type":"text",
         "help": "Anything that identifies your research among your others researches. (May be a number.)",
         "required":true
      },
      {
         "name":"description",
         "label":"Research Description",
         "type":"text",
         "help": "Description of your main research.",
         "required":true
      },
      {
         "name":"study_id",
         "label":"Study ID",
         "type":"text",
         "help": "Anything that identifies your study among your others studies for the currrent research.",
         "required":true
      },
      {
         "name":"description",
         "label":"Study Description",
         "type":"text",
         "help": "A description of this study.",
         "required":true
      },
      {
         "name":"tags",
         "type":"repeating",
         "label":"Keywords",
         "help": "Keywords for this study."
      },
      {
         "name":"summary",
         "type":"textarea",
         "label":"Summary",
         "help": "Brief summary of this study in the context of your current research."
      },
      {
         "label":"Published",
         "name":"published",
         "type":"checkbox",
         "value": true
      },
      {
         "label":"Authentication Required",
         "name":"authRequired",
         "type":"checkbox",
         "value": true
      }
   ],
   "json": {
      "schema": 
				{
				 "title": "Study Parameters",
				 "type": "object",
				 "properties": {
				   "Researcher Name": {
					 "type": "string",
					 "description": "First and Last name",
					 "minLength": 4,
					 "default": "Jeremy Dorn"
				   },
				   "Researcher ID": {
					 "type": "integer",
					 "default": 25,
					 "minimum": 18,
					 "maximum": 99
				   },
				   "Study Name": {
					 "type": "string",
					 "format": "color",
					 "title": "favorite color",
					 "default": "#ffa500"
				   },
				   "gender": {
					 "type": "string",
					 "enum": [
				   "male",
				   "female"
					 ]
				   },
				   "studyDef": {
					 "type": "object",
					 "title": "Study Definition",
					 "properties": {
				   "city": {
					 "type": "string",
					 "default": "San Francisco"
				   },
				   "state": {
					 "type": "string",
					 "default": "CA"
				   },
				   "citystate": {
					 "type": "string",
					 "description": "This is generated automatically from the previous two fields",
					 "template": "{{city}}, {{state}}",
					 "watch": {
					   "city": "location.city",
					   "state": "location.state"
					 }
				   }
					 }
				   },
				   "params": {
					 "type": "array",
					 "format": "tabs",
					 "title": "Parâmetros",
					 "items": {
				   "type": "object",
				   "title": "Group",
				   "headerTemplate":"{{ i1 }} - {{self.type}}",
				   "properties": {
					 "type": {
					   "title": "X",
					   "type": "string",
					   "enum": [
						 "Características",
						 "Seleção",
						 "Evento Subsequente"
					   ],
					   "default": "Características"
					 }
				   }
					 },
					 "default": [
				   {
					 "type": "Características"
				   },
				   {
					 "type": "Seleção"
				   },
				   {
					 "type": "Evento Subsequente"
				   }
					 ]
				   }
				 }
				}
	   
   }
}
