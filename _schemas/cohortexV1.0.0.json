{
   "title":"Research Parameters",
   "description":"The following fields define the researcher and the research name.",
   "fields":[
      {
         "name":"researcher_id",
         "label":"Researcher ID",
         "type":"text",
         "help": "Use valid email address. May be your github email.",
         "required":true
      },
      {
         "name":"description",
         "label":"Researcher",
         "type":"text",
         "help": "Your name or description.",
         "required":true
      },
      {
         "name":"research_id",
         "label":"Research ID",
         "type":"text",
         "help": "Anything that identifies your research among your others researches. (May be a number.)",
         "required":true
      },
      {
         "name":"description",
         "label":"Research Description",
         "type":"text",
         "help": "Description of your main research.",
         "required":true
      },
      {
         "name":"study_id",
         "label":"Study ID",
         "type":"text",
         "help": "Anything that identifies your study among your others studies for the currrent research.",
         "required":true
      },
      {
         "name":"description",
         "label":"Study Description",
         "type":"text",
         "help": "A description of this study.",
         "required":true
      },
      {
         "name":"tags",
         "type":"repeating",
         "label":"Keywords",
         "help": "Keywords for this study."
      },
      {
         "name":"summary",
         "type":"textarea",
         "label":"Summary",
         "help": "Brief summary of this study in the context of your current research."
      },
      {
         "label":"Published",
         "name":"published",
         "type":"checkbox",
         "value": true
      },
      {
         "label":"Authentication Required",
         "name":"authRequired",
         "type":"checkbox",
         "value": true
      }
   ],
   "json": {
      "schema": 
				{
					"title": "Características",
					"type": "object",
					"properties": {
						"Enrollment": {
							"type": "object",
							"title": "Período de Alistamento",
							"format": "grid",
							"properties": {
									"initialDate": {
										"title": "Início",
										"type": "string",
										"format": "date",
										"description": "Data de inicio do alistamento",
										 "default": "01/01/1985"
										},
									"endDate": {
										"title": "Fim",
										"type": "string",
										"description": "Data de fim do alistamento",
										"format": "date",
										 "default": "31/12/2016"
									}
								}
						},
						"studyInterval": {
							"type": "object",
							"title": "Intervalo do estudo",
							"format": "grid",
							"properties": {
								"initialDate": {
									"title": "Início",
									"type": "string",
									"format": "date",
									"description": "Data de inicio do estudo",
									 "default": "01/01/2010"
									},
								"endDate": {
									"title": "Fim",
									"type": "string",
									"format": "date",
									"description": "Data de inicio do estudo",
									 "default": "01/01/2016"
								}
							}
						},
						"personDemographics": {
							"type": "object",
							"title": "Demografia",
							"format": "grid",
							"properties": {
								"minAge": {
									"title": "Idade mínima",
									"type": "integer",
									"format": "date",
									"description": "Data de inicio do estudo",
									 "default": "01/01/2010"
									},
								"maxAge": {
									"title": "Idade máxima",
									"type": "integer",
									"format": "date",
									"description": "Data de inicio do estudo",
									 "default": "01/01/2016"
									},
								"gender": {
									"title": "Géneros em estudo",
									"type": "array",
									"uniqueItems": true,
									"items": {
										"type": "string",
										"enum": ["Masculino","Feminino","Indeterminado","Outros"]
										}
									}
							}
						}
					}
				}
	   
   }
}
